<h1>Edit this story</h1>

{{#with story}}

<form action="/stories/{{_id}}/edit" method="POST">

	<label for="title">Title: </label>
	<input type="text" id="title" name="title" value="{{title}}">

	<label for="author">Author: </label>
	<input type="text" id="author" name="author" value="{{author}}">

	<label for="genre">genre: </label>
	<input type="text" id="genre" name="genre" value="{{genre}}">

	<label for="city">City: </label>
	<input type="number" id="city" name="city" value="{{city}}">

	<label for="story">Story: </label>
	<input type="string" id="story" name="story" value="{{story}}">
	<button type="submit">Update this story</button>
    
</form>

{{/with}}