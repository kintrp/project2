<h1>Hello {{user.username}}!</h1>

<form action="/profile" method="POST"\>

    <label for="title">title</label> 
    <input id="title" type="text" name="title">

    <label for="genre">genre</label> 
    <input id="genre" type="text" name="genre">
  
    <label for="city">city</label> 
    <input id="city" type="number" name="city">

    <label for="story">story</label> 
    <input id="story" type="text" name="story">

        <button type="submit">Add</button>

</form>

  {{#each storyList}}

      <div style="margin-top: 50px; background-color: white; height: 165px; width: 900px; padding:10px;">

          <span style="color: black;font-weight:bold"> title: </span> {{ this.title }} 
          <span style="color: black;font-weight:bold"> genre: </span> {{ this.genre }}  
          <span style="color: black;font-weight:bold"> city: </span> {{ this.city }} <br><br>
          <span style="color: black;font-weight:bold"> story: </span> {{ this.story }} 

          <form action="/stories/{{this._id}}/delete" method="POST">
                <button class="general-button delete-button" type="sumbit" style='margin-top:8px; background-color:rgb(167, 111, 167)'>Delete</button>
          </form>

          <button class="general-button edit-button" type="sumbit" style='margin-top:8px; background-color:rgb(167, 111, 167); width:55px'><a href="/stories/{{this._id}}/edit" style='text-decoration: none; color:black'>Edit</a></button>


    </div>

  {{/each}} 

 



